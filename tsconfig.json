{
  "compilerOptions": {
   "strict": true,
    "outDir": ".",
    "declaration": true,
    "declarationDir": ".",
    "module": "Preserve",
    "target": "ES6",
    "experimentalDecorators": true,
    "lib": ["es2020", "dom"],
    "sourceMap": false,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
, "vite.config.mts"  ],
  "exclude": [
    "*.d.ts",
    "./**/*.d.ts",
    "dist",
    "node_modules"
  ]
}
